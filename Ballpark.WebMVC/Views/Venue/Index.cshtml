@model IEnumerable<Ballpark.Models.Venue.VenueListItem>

@{
    ViewBag.Title = "Index";
}

<h2>MLB Stadiums</h2>

<style>
    .venueLink {
        color: white;
    }

        .venueLink:hover {
            font-weight: bold;
            color: white;
        }
</style>

@*<p>
        @Html.ActionLink("Create New", "Create")    //might add this back in, the goal is that the user does not have ability to add a new stadium, only the admin
    </p>*@

<div class="progressTwo" style="--width: 50" data-label="My Progress...">

</div>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.VenueName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.YearOpened)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Capacity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.VenueName, "Details", new { id = item.VenueID }, new { @class = "venueLink" })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOpened)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.VenueID }, new { @class = "venueLink" }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.VenueID }, new { @class = "venueLink" })
            </td>
        </tr>
    }

</table>
